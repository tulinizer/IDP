<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" >

        <VideoView
            android:layout_width="480dp"
            android:layout_height="326dp"
            android:id="@+id/video_view" />
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/play_button"
        android:layout_gravity="bottom"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:id="@+id/range_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="375dp">
    </FrameLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/pause_button"
        android:layout_gravity="bottom"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontal_scroll"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="400dp">

        <LinearLayout
                android:id="@+id/linear_images"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Split"
        android:id="@+id/split_button"
        android:layout_below="@+id/linearLayout1"
        android:layout_toRightOf="@+id/play_button"
        android:layout_toEndOf="@+id/play_button" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/timestampMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"/>

    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/timestampMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp" />

    <!--SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:thumb="@drawable/seekbar_norm"
        android:maxHeight="700dp"
        android:progressDrawable="@android:color/transparent"
        android:layout_alignBottom="@id/horizontal_scroll"
        android:layout_alignTop="@id/horizontal_scroll"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iconView"
        android:layout_alignLeft="@+id/horizontal_scroll"
        android:layout_alignBottom="@+id/horizontal_scroll"
        android:layout_alignTop="@+id/horizontal_scroll"
        android:layout_alignRight="@+id/horizontal_scroll"
        android:layout_alignEnd="@+id/horizontal_scroll"/>

    <com.example.tulin.camapp.DrawRect
        android:id="@+id/rect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="400dp" />

    <!--com.example.tulin.camapp.CustomBordersVideoFrame
        android:id="@+id/thumbs_borders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="400dp" -->

</RelativeLayout>